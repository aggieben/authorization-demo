@model ManagePermissionsViewModel
<h4>Permissions</h4>

<table class="table">
    <thead>
        <tr>
            <th>Permissions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var p in Model.Permissions)
        {
            <tr>
                <td>@p</td>
            </tr>
        }
    </tbody>
</table>

<form asp-for="Manage" asp-action="ManagePermissions" method="post">        
<h4>Add another permission:</h4>
<p>
    <select asp-for="Permissions" asp-items="Model.PermissionSelectItems"></select>
</p>
<p>
        <button type="submit" class="btn btn-default">Submit</button>
</p>
</form>
